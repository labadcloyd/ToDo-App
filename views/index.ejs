<%- include('partials/header'); -%>


<input type="checkbox" class="checker" id="bar-checker">
<label class="minibar" for="bar-checker">
    <span class="arrow">></span>
</label>
<div class="side-bar">
    <a class="site-title" href="/">ToDo App</a>
    <div class="main-list-container">
        <% todos.forEach((todos)=>{ %>
                <form action="/removeList" class="list-container" method="POST">
                    <a href="/list/<%= todos._id %>" class="list-container-title"><%= todos.title %></a>
                    <button type="submit" name="removeList" value="<%= todos._id %>" class="deletebtn">üóëÔ∏è</button>
                </form>
        <% }) %>
    </div>
    

    <form action="/addNewList" class="new-list-container" method="POST">
        <input type="text" class="new-list-input" maxlength="50" name="newList" autocomplete="off">
        <button type="submit">+</button>
    </form>
</div>



