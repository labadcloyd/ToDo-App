<%- include('partials/header'); -%>


<div class="side-bar">
    <h1 class="site-title">ToDo App</h1>
    <div class="main-list-container">
        <% todos.forEach((todos)=>{ %>
                <form action="/removeList" class="list-container" method="POST">
                    <a href="/list/<%= todos.title %>"><%= todos.title %></a>
                    <button type="submit">üóëÔ∏è</button>
                </form>
        <% }) %>
    </div>
    

    <form action="/addNewList" class="new-list-container" method="POST">
        <input type="text" class="new-list-input" maxlength="30" name="newList">
        <button type="submit">+</button>
    </form>
</div>



<div class="main-container">
    <div class="todo-container">
        <h2 class="list-title"><%= todostitle.title %></h2>
        <% todocontent.forEach((todos)=>{ %>
        <label class="todo">
            <input type="checkbox" name="todo1" class="todo1">
            <span class="checkmark"></span>        
            <span class="todo-text"><%= todos %></span> 
        </label>
        <% })%>
    </div>
    <form class="add-new-todo" action="/addNewTodo" method="POST">
        <input type="text" name="newItem">
        <button name="listTitle" value="<%= todostitle.title %>">+</button>
    </form>
</div>


<%- include('partials/footer'); -%>
